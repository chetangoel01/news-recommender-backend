# Database Configuration
DATABASE_URL=postgresql://news_user:news_password@localhost:5432/news_recommender

# API Keys (Required)
NEWS_API_KEY=your_news_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production

# Pipeline Settings
PIPELINE_INTERVAL_HOURS=12
PIPELINE_BATCH_SIZE=50
PIPELINE_MAX_RETRIES=3

# Database Settings (Optional - for advanced tuning)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Logging Settings (Optional)
LOG_FILE_PATH=/var/log/news-pipeline/pipeline.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5

# Performance Settings (Optional - for Pi optimization)
MAX_WORKERS=2
CHUNK_SIZE=10
EMBEDDING_BATCH_SIZE=5 